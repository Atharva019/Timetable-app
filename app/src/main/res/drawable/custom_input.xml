<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!--the outline box turns to green when the edit text is in focus-->
    <item android:state_enabled="true" android:state_focused="true">
        <shape android:shape="rectangle">
            <solid android:color="#3CFFFFFF" />
            <stroke android:width="2dp" android:color="#fd3431" />
            <corners android:radius="5dp"/>
        </shape>
    </item>

    <!--the outline box turns to grey when the edit text is out of focus-->
    <item android:state_enabled="true">
        <shape android:shape="rectangle">
            <solid android:color="#E4AE5D5D" />
            <stroke android:width="0dp" android:color="#686868" />
            <corners android:radius="5dp"/>
        </shape>
    </item>

</selector>
