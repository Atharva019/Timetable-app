<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!--the outline box turns to green when the button is in focus-->
    <item android:state_enabled="true" android:state_focused="true">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#C02F2F"
                android:centerColor="#EB4B4B"
                android:endColor="#C02F2F" />
            <corners android:radius="10dp"/>
        </shape>
    </item>

    <!--the outline box turns to grey when the button is out of focus-->
    <item android:state_enabled="true">
        <shape android:shape="rectangle">
            <solid android:color="#02DD3311" />
            <stroke android:width="2dp" android:color="#4A2D2D" />
            <corners android:radius="5dp"/>
        </shape>
    </item>
</selector>
